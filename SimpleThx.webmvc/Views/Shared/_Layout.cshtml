<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Thanks</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-expand-lg sticky-top navbar-light  bg-light">
        <div class="container">

            <nav class="navbar navbar-light bg-light">
                @Html.ActionLink("SimpleThx", "Index", "Home", new { area = "" }, new {@class = "navbar-brand" })


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto">


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Posts", "Index", "Post", new { area = "" }, new { @class = "nav-link"})

                            </li>

                            <li class="nav-item">
                                @Html.ActionLink("Friends", "Index", "Friend", new { area = "" }, new { @class = "nav-link"})

                            </li>


                            <!-- <form class="form-inline my-2 my-lg-0">
                                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                                 </form>
                             -->


                        }

                    </ul>

                    @Html.Partial("_LoginPartial")

                </div>
            </nav>



        </div> <!-- END Container-->
    </div> <!-- END Larger Nav Bar Class-->
    


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Simple Thx</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
