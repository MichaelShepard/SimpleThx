@model IEnumerable<SimpleThx.Models.AccountInfoList>

@{
    ViewBag.Title = "SearchForFriends";
}
<br />
<h2>Search For Friends</h2>
<br />
<form asp-controller="FriendController" asp-action="SearchForFriends" method="get">
    <p>
        Last Name: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<br />
<table class="table">
    <tr>

        
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    @Html.HiddenFor(modelItem => item.AccountID)

    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country)
    </td>

    <td>

        

        <input type="button" value="Connect" onclick="location.href='@Url.Action("ConnectFriends", "Friend", new { id = item.AccountID })'" />


    <!--@Html.ActionLink("Connect", "ConnectFriends", new { id = item.AccountID })-->


    </td>
    </tr>
    } <!--END For Each -->

</table>


    
    
    


