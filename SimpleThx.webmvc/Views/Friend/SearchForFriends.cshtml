@model IEnumerable<SimpleThx.Models.AccountInfoList>

@{
    ViewBag.Title = "SearchForFriends";
}

<Section id="posts">
    <div class="container">
        <h2>Search For Friends</h2>

        <form asp-controller="FriendController" asp-action="SearchForFriends" method="get">

     <div class="form-row align-items-center">
         <div class="col-sm-5 my-1">
             <input class="form-control" type="text" placeholder="Name" name="searchString" />
         </div>
         <div class="col-auto my-1">
             <input class="btn btn-outline-secondary centered mb-2 mt-2" type="submit" value="Search" />
         </div>
     </div>
    </form>

        

        <table class="table table-hover table-responsive-md">
            <thead class="table-borderless">
                <tr class="table-borderless">
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    @Html.HiddenFor(modelItem => item.AccountID)                  

                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>

                        <input class="btn btn-outline-secondary btn-sm centered" type="button" value="Connect" onclick="location.href='@Url.Action("ConnectFriends", "Friend", new { id = item.AccountID })'" />

                        <!--@Html.ActionLink("Connect", "ConnectFriends", new { id = item.AccountID })-->


                    </td>
                </tr>

                } <!--END For Each -->
            </tbody>
        </table>
    </div>
</Section>



