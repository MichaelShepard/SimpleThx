@model IEnumerable<SimpleThx.Models.PostCommentList>

@{
    ViewBag.Title = "PostCommentList";
}


<Section id="post-comment">
    <div class="container">
        <h2>My Posts</h2>





        @foreach (var item in Model)
        {

            @Html.HiddenFor(modelItem => item.CommentorUserID)
            @Html.HiddenFor(modelItem => item.PostID)

            <div class="container">
                <div class="col border border-1 rounded bg-white">
                    <div class="row mt-2 mb-2">

                        <div class="col-3">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </div>
                        <div class="col">
                            @Html.DisplayFor(modelItem => item.Title)
                        </div>
                    </div>

                    <div class="row mb-2">

                        <div class="col-3">

                        </div>
                        <div class="col mb-2">
                            @Html.DisplayFor(modelItem => item.Content)
                        </div>
                    </div>
                </div>
                <div class="col">
                    @foreach (var thing in Model)
                    {

                        @Html.HiddenFor(modelItem => item.CommentID)

                        <div class="col border border-1 rounded bg-white mb-1">
                            <div class="row mb-2 mt-2">
                                @Html.DisplayFor(modelItem => thing.CommentContent)
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</Section>
