@model IEnumerable<SimpleThx.Models.AccountInfoList>

@{
    ViewBag.Title = "Index";
}

@if (Session["Email"] != null)
{
    <h2>Account Information</h2>
    <h3>Welcome @Session["Email"].ToString()</h3>
}



@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<h2>Account Information</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PictureURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="~/Content/Images/@item.PictureURL" class="rounded-circle" height="40" width="40" asp-append-version="true" />
        </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Country)
    </td>

    <td>
        @Html.ActionLink("Edit", "EditAccountInfo", new { id = item.AccountID })
    </td>
</tr>
    }

</table>
