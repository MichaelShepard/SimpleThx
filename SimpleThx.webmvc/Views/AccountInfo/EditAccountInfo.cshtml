@model SimpleThx.Models.AccountInfoEdit

@{
    ViewBag.Title = "EditAccountInfo";
}

<Section id="account-info-edit" class="container text-center">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">

            <h2>Update Account</h2>
            
                @using (Html.BeginForm("EditAccountInfo", "AccountInfo", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="row g-3">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.AccountID)

                        <div class="form group col-md-12 mb-4">
                            <!--@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon-first-name">First Name</span>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", aria_describedby = "basic-addon-first-name" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12 mb-4">
                            <!--@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })-->

                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">Last Name</span>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", aria_describedby = "basic-addon1" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <!--@Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon-state">State</span>
                                <!--@Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-select" } }) Removed to use dropdown-->
                                @Html.DropDownListFor(model => model.State, SimpleThx.webmvc.Controllers.SelectListItemHelper.GetStateList(), new { htmlAttributes = new { @class = "form-select-lg dropdown-menu-end", aria_describedby = "basic-addon-state" } })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <!--@Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label col-md-2" })-->
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon-Country">Country</span>

                                <!--@Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } }) Removed to use dropdown-->

                                @Html.DropDownListFor(model => model.Country, SimpleThx.webmvc.Controllers.SelectListItemHelper.GetCountryList(), new { htmlAttributes = new { @class = "form-select", aria_describedby = "basic-addon-country" } })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!--Button to add image to profile-->
                        <div class="col-md-12 mb-4">
                            
                                <input class="form-control form-control-lg" type="file" name="PictureImage" id="PictureImage" />
                            
                        </div>

                        <div class="col-md-12">
                            <div>
                                <input class="btn btn-outline-secondary btn-lg centered" type="submit" value="Save"  />

                            </div>
                        </div>
                    </div>

                    <div>
                        @Html.ActionLink("Acount Home", "Index")

                    </div>
                }
            <
        </div>
    </div>
</Section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
