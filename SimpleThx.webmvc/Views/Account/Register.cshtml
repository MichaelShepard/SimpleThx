@model SimpleThx.webmvc.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<section id="registration-form" class="container text-center">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <img class="mb-4" src="~/Content/SiteImages/SimpleTHX Logo.png" alt="">
                <h1 class="mb-4">Create an account</h1>

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group input-group-lg">
                    <!-- @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })-->
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control, col-md-8" })
                    </div>
                </div>

                <div class="form-group">
                    <!--@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })-->
                    <div>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control, col-md-8" })
                    </div>
                </div>

                <div class="form-group">
                    <!--@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })-->
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control, col-md-8" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-outline-light centered" value="Register" />
                    </div>
                </div>
            }
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
