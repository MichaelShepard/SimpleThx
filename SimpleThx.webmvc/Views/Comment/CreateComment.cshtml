@model SimpleThx.Models.CommentCreate

@{
    ViewBag.Title = "CreateComment";
}

<Section id="create-comment" class="container text-center">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">

            <h2>Create Comment</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                   
                    @Html.HiddenFor(model => model.CommentID)
                    @Html.HiddenFor(model => model.PostID)
                    @Html.HiddenFor(model => model.CommentorUserID)
                    @Html.HiddenFor(model => model.Status)

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.CommentContent, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        <div>
                            @Html.TextAreaFor(model => model.CommentContent, new { htmlAttributes = new { placeholder = "Comment", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CommentContent, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" class="btn btn-outline-secondary btn-sm centered" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to Comments", "Index")
            </div>

        </div>
    </div>
</Section>
